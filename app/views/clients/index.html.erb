<h1><%=t("clients")%></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%=Client.human_attribute_name(:first_name)%></th>
      <th><%=Client.human_attribute_name(:last_name)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td ><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td class="text-center"> <%= link_to t('Show'), client ,class:"btn btn-info"%> </td>
        <td class="text-center"><%= link_to t('Edit'), edit_client_path(client), class:"btn btn-warning" %></td>
        <td class="text-center"><%= link_to t('Destroy'), client, class:"btn btn-danger", method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("new_client"), new_client_path, class:"monter-effect-button" %>